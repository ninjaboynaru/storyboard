{
	"name": "story-board",
	"description": "Full stack, single page webiste allowing users to view a wall of random user creted stories.",
	"author": "Thiago HPC",
	"version": "1.0.0",
	"private": "true",
	"scripts": {
		"test": "mocha _tests_ --recursive --reporter spec",
		"start": "node server/server.js",
		"start-dev": "nodemon server/server.js",
		"build": "webpack",
		"watch": "webpack --watch",
		"build:css": "node-sass ./www-css/style.scss ./www/css/style.css",
		"watch:css": "npm run build:css && npm run build:css -- --watch --recursive",
		"lint": "eslint **/*.{js,jsx} --quiet",
		"comb": "csscomb ./www/css --verbose"
	},
	"dependencies": {
		"babel-register": "^6.26.0",
		"body": "^5.1.0",
		"express": "^4.16.2",
		"google-auth-library": "^0.12.0",
		"mongoose": "^4.13.5",
		"prop-types": "^15.6.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-router-dom": "^4.2.2",
		"whatwg-fetch": "^2.0.3"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.0.3",
		"babel-loader": "^7.1.2",
		"babel-preset-env": "^1.6.1",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"chai": "^4.1.2",
		"chai-http": "^3.0.0",
		"csscomb": "^4.2.0",
		"eslint": "^4.12.1",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-react": "^1.1.7",
		"eslint-loader": "^1.9.0",
		"eslint-plugin-react": "^7.5.1",
		"json-loader": "^0.5.7",
		"mocha": "^4.0.1",
		"node-sass": "^4.9.0",
		"nodemon": "^1.12.1",
		"prettier": "^1.8.2",
		"uglifyjs-webpack-plugin": "^1.1.4",
		"webpack": "^3.9.1"
	}
